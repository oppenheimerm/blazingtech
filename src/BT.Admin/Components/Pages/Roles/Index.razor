@code {
    [SupplyParameterFromForm]
    private AddRoleDTO? NewRole { get; set; }
    private RoleLiteDTO? RoleDetails { get; set; }

    //protected override void OnInitialized() => Model ??= new();

    private List<RoleLiteDTO>? Roles { get; set; }
    bool ShowingAddRoleDialog { get; set; } = false;
    bool ShowRoleDetailDialog { get; set; } = false;
    bool AddRoleSuccess { get; set; } = false;
    string? AddRoleErrorMessage { get; set; }
    bool OperationComplete = false;

    private void OnSubmitCreate(){

        //Logger.LogInformation("Id = {Id}", Model?.Id);
    }   


    protected override async Task OnInitializedAsync()
    {
        Roles = await AdminService.GetRoles(NavigationManager);
    }

    void ShowAddRoleDialog()
    {

        ShowingAddRoleDialog = true;
        NewRole = new();
        //StateHasChanged();
    }

    void CancelAddRoleDialog()
    {
        ShowingAddRoleDialog = false;
        NewRole = null;
    }

    async Task ConfirmAddRoleDialog()
    {
        // submit
        var success = await AdminService.AddRoleAsync(NavigationManager, NewRole!);
        if(success!.Success == true)
        {
            ShowingAddRoleDialog = false;
            AddRoleSuccess = true;
            AddRoleErrorMessage = string.Empty;
            OperationComplete = true;
            StateHasChanged();
        }
        else
        {
            ShowingAddRoleDialog = true;
            AddRoleSuccess = false;
            AddRoleErrorMessage = !string.IsNullOrWhiteSpace(success.Message) ? success.Message : "Unablae to process form. ";
            OperationComplete = true;
            StateHasChanged();
        }
    }

    void OnCloseRoleDetailDialog()
    {
        ShowRoleDetailDialog = false;
    }

    void OnShowRoleDetailDialog( RoleLiteDTO role)
    {
        RoleDetails = role;
        ShowRoleDetailDialog = true;
    }
}

